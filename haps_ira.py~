#!/usr/bin/env python

import gzip
import networkx as nx
import re
from collections import defaultdict
import math
import argparse
import cProfile , pstats , resource
import sys

def main():
  parser = argparse.ArgumentParser()
  parser.add_argument('-i', '--infile', type=str, default=None)
  parser.add_argument('-o', '--outfile', type=str, default=None)
  #parser.add_argument('--strict', default=False, action='store_true')
  args = parser.parse_args()

  
  usage_denom=1024

  Gloc=nx.Graph()
  infile=args.infile

  with gzip.open(infile, 'rb') as fp:
    line=fp.readline().strip().decode()
    ct=0:
    while line :
      if ct%1000==0:
        print(str(ct)+'\t'+str(resource.getrusage(resource.RUSAGE_SELF).ru_maxrss/usage_denom))
      ll=re.split('[\t]', line)
      [aa, bb, cc, dd]=list(map(int, ll[2:6]))
      [loc1, loc2]=ll[0:2]
      if pre_filter_strict_pass(aa, bb, cc, dd):
        Gloc.add_edge(loc1, loc2);
        Gloc.edges[loc1, loc2].update({'conf': True, 'line': line})
      elif pre_filter_loose_pass(aa, bb, cc, dd)
        Gloc.add_edge(loc1, loc2);
        Gloc.edges[loc1, loc2].update({'conf': False, 'line': line})
      line=fp.readline().strip().decode()
      ct+=1

  with gzip.open(args.outfile, 'wb') as outf:
    comp_loose=list(Gloc.subgraph(c) for c in sorted(nx.connected_components(Gloc), key=len, reverse=True))
    for ii in range(len(comp_loose)):
      gg_loose=comp_loose[ii]
      selected_edges = [(u,v) for u,v,e in gg_loose.edges(data=True) if e['conf'] == True]
      gg_conf=gg_loose.edge_subgraph(selected_edges)
      gg=list(gg_conf.subgraph(cc) for cc in sorted(nx.connected_components(gg_conf), key=len, reverse=True))
      for jj in range(len(gg)):
        edgelist=list(gg.edges())
        for edge in edgelist:
          curedge=gg.edges[edge]
          print(str(ii)+'\t'+str(jj)+'\t'+curedge['line']+'\t'+curedge['conf'], file=outf)
                                                         


                       


def pre_filter_strict_pass(aa, bb, cc, dd, minfrac=0.95):
  nn=aa+bb+cc+dd
  passf=False
  bal=-1
  if nn<2:
    passf=False
  elif (aa+dd)*1.0/nn>minfrac:
    bal=aa*1.0/(aa+dd)
  elif (bb+cc)*1.0/nn>minfrac:
    bal=bb*1.0/(bb+cc)
  if bal>0.1 and bal<0.9:
    passf=True
  return passf

def pre_filter_loose_pass(aa, bb, cc, dd, minfrac=0.95):
  nn=aa+bb+cc+dd
  passf=False
  if aa==nn or bb==nn or cc==nn or dd==nn:
    return passf
  if pre_filter_strict_pass(aa, bb, cc, dd, minfrac-0.05):
    passf=True
  else:
    bal=-1
    if (aa+dd)*1.0/nn>minfrac:
      bal=aa*1.0/(aa+dd)
    elif (bb+cc)*1.0/nn>minfrac:
      bal=bb*1.0/(bb+cc)
    if bal>0.01 and bal<0.99:
      passf=True
  return passf
                                                                            

      
  


if __name__ == "__main__":
    main()
